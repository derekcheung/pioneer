  <%= semantic_form_for @attachment, :url => attached_author_url(@author, @attachment), :html => { :multipart => true } do |f| %>
    <%= f.input :attached_file, :label => t(:file), :required => true, :hint => t(:select_file) , :as => :file %>
    <%= f.buttons do %>
      <%= f.commit_button t(:upload), :button_html => { :disable_with => t(:uploading) } %>
    <% end %>
  <% end %>